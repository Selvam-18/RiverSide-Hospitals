<div class="container-fluid" id="admin">

  <div class="container my-5" >
    <div class="row">
      <h1 class="my-2 py-2">Admin Panel</h1>
  
      <div class="col-lg-6 col-md-6 my-3">
        <% if(typeof alert!='undefined') {%>
          <% alert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <strong><%= error.msg %></strong> 
              
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% }) %>
            <% } %>
            <form class="w-50" action="/login" method="POST">
              <h1 class="h3 mb-3 fw-bold">Sign in</h1>
              <div class="form-floating py-2">
                <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                <label for="floatingInput">Email address</label>
              </div>
              <div class="form-floating py-2">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                <label for="floatingPassword">Password</label>
              </div>
              <!-- <a class="btn btn-primary" href="/login" role="button">Sign in</a> -->
              <button type="submit" class="btn btn-lg">Sign In</button>
            </form>
          </div>
          
          <div class="col-lg-6 col-md-6 my-3">
            
           

        <form class="w-50" action="/register" method="POST">

           <% if(typeof regAlert!='undefined') {%>
          <% regAlert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <strong><%= error.msg %></strong> 
              
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% }) %>
            <% } %>

          <h1 class="h3 mb-3 fw-bold">Register Admin</h1>
          <div class="form-floating py-2">
            <input type="email"  name="email" class="form-control" id="floatingInput" placeholder="name@example.com"required>
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating py-2">
            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Create password" required>
            <label for="floatingPassword">Password</label>
          </div>
          <button type="submit" class="btn btn-lg">Sign up</button>
        </form>
      </div>
    </div>
  </div>
</div>




