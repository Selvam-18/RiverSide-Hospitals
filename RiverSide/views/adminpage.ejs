<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Apollo Hospitals</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
  
  <link rel="stylesheet" href="/styles/style.css">
  <link rel="icon" href="/assets/icons/medical-symbol.png">
  <style>
    body{
        background-color: #007c9d;
        color: white;
    }
  </style>
</head>


<body>
    <% if(typeof alert!='undefined') {%>
        <% alert.forEach(function(error) { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong><%= error.msg %>!</strong> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% }) %>
      <% } %>

      <% if(typeof successAlert!='undefined') {%>
        <% successAlert.forEach(function(error) { %>
          <div class="alert alert-success alert-dismissible" role="alert">
            
            <h4 class="alert-heading"><%= error.msg %></h4>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% }) %>
      <% } %>

<h1 class="text-center m-5">Patient Data Entry</h1>


<div class="container my-2 py-2 patient-data my-5">
    <form action="/success" method="POST">
        <label class="py-3">Patient Name: </label> <br>
        <input class="my-2" type="text"  name="username"  required> <br>
        <label>Mobile Number: </label> <br>
        <input class="my-2" type="number"  name="mobileno"  id="mobileno" required> <br>
        <label>Aadhaar: </label> <br>
        <input class="my-2" type="number"  name="aadhaar" id="aadhaar" required> <br>

        <label class="py-3" >Gender: </label>
        <input  type="radio" name="gender" value="Male"><label>Male</label>
        <input  type="radio" name="gender" value="Female"><label>Female</label>
        <br>

        <label class="py-3" >Category: </label> 
        <select name="category">
            <option value="Emergency" name="category">Emergency</option>
            <option value="General" name="category">General</option>
            <option value="Ortho" name="category">Ortho</option>
            <option value="Cardio" name="category">Cardio</option>
            <option value="Nueral" name="category">Nueral</option>
            <option value="Maternity" name="category">Maternity</option>
            <option value="Dermal" name="category">Dermal</option>
        </select>
        <br>
        <label class="py-3" >Blood Group: </label> 
        <select name="bloodgroup">
            <option  value="B+">B+</option>
            <option name=""bloodgroup value="B-">B-</option>
            <option name=""bloodgroup value="A+">A+</option>
            <option name=""bloodgroup value="A-">A-</option>
            <option name=""bloodgroup value="O+">O+</option>
            <option name=""bloodgroup value="O-">O-</option>
            <option name=""bloodgroup value="AB+">AB+</option>
            <option name=""bloodgroup value="AB-">AB-</option>
        </select>

        
        <br>

        <button class=" btn my-3 py-2 patient-data-submit" type="submit">Submit</button>
    </form>
</div>

<%- include('partials/footer') %>